<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	<resultMap id="resultMapBoardVo" type="com.javaex.vo.BoardVo">
		<result column="no" property="no" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="hit" property="hit" />
		<result column="reg_date" property="regDate" />
		<result column="user_no" property="userNo" />
		<result column="name" property="name" />
	</resultMap>

	<!-- 리스트 -->
	<select id="selectList" resultMap="resultMapBoardVo">
		<![CDATA[
			select board.no,
			       board.title,
			       board.content,
			       board.hit,
			       board.reg_date regDate,
			       board.user_no userNo,
			       users.name
			from   board, users
			where  users.no = board.user_no userNo
			order by no desc
	
		]]>
	</select>

	<!-- 글쓰기 -->
	<insert id="insert" parameterType="BoardVo">
		<![CDATA[
			insert into board
			values (seq_board_no.nextval, #{title}, #{content}, 0, SYSDATE, #{userNo})
		]]>
	</insert>

	<!-- 조회수 -->
	<update id="hit" parameterType="int">
		<![CDATA[ 
			update board
			set    hit = hit+1
			where  no = #{boardNo}
		]]>
	</update>

	<!-- 읽기 -->
	<select id="read" parameterType="int" resultMap="resultMapBoardVo">
		<![CDATA[
		select board.no,
			   board.title,
			   board.content,
			   board.hit,
			   board.reg_date regDate,
			   board.user_no userNo,
			   users.name
		from  board, users
		where users.no = board.user_no userNo 
		and board.no = #{no}
		]]>
	</select>

	<!-- 수정 -->
	<update id="modify" parameterType="BoardVo">
		<![CDATA[ 
			update board
			set    title = #{title},
			       content = #{content}
			where  no = #{no}
		]]>
	</update>

	<!-- 삭제 -->
	<delete id="delete" parameterType="BoardVo">
		<![CDATA[ 
				delete from board
				where no= #{no}
		]]>
	</delete>

</mapper>